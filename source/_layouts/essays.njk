---
layout: base.njk
templateClass: tmpl-home
---

{# This is the template for the Essays page–it lists the essays in the collection #}

<div class="wrapper home">
  <div class="content">
    {{ content | safe }}
    <ul>
      {%- for essay in collections.essays -%}
        <li{% if page.url == essays.url %} aria-current="page"{% endif %}>{{ essay.data.page.date | htmlDateString }} — <a href='{{ essay.url }}'>{{ essay.data.title }}</a></li>
      {%- endfor -%}
    </ul>
  </div>
</div>
